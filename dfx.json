{
  "canisters": {
    "wasm-utils": {
      "type": "custom",
      "candid": "wasm-utils/wasm-utils.did",
      "wasm": "wasm-utils/target/wasm32-unknown-unknown/release/wasm_opt.wasm",
      "build": [
        "sh -c 'cd wasm-utils && ./build.sh'"
      ]
    },
    "backend": {
      "dependencies": ["wasm-utils"],
      "main": "backend/Main.mo",
      "type": "motoko"
    },
    "react_app": {
      "dependencies": ["backend"],
      "frontend": {
        "entrypoint": "public/index.html"
      },
      "source": ["build"],
      "type": "assets"
    }
  },
  "defaults": {
    "build": {
      "output": "build",
      "packtool": "vessel sources"
    }
  },
  "networks": {
    "local": {
      "bind": "localhost:8000",
      "type": "ephemeral"
    }
  }
}
