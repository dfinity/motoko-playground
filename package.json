    "@dfinity/principal": "^0.10.2",
    "@monaco-editor/react": "^4.3.1",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.10",
    "lodash.debounce": "^4.0.8",
