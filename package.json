{
  "name": "motoko-playground",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dfinity/agent": "^2.0.0",
    "@dfinity/candid": "^2.0.0",
    "@dfinity/principal": "^2.0.0",
    "@monaco-editor/react": "4.4.6",
    "@types/node": "^14.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.10",
    "lodash.debounce": "^4.0.8",
    "motoko": "^3.6.16",
    "prettier-plugin-motoko": "^0.8.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-google-charts": "^4.0.1",
    "react-markdown": "^6.0.2",
    "react-modal": "^3.14.3",
    "styled-components": "^5.3.0",
    "typescript": "^4.3.5",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.19",
    "comlink-loader": "^2.0.0",
    "concurrently": "^7.6.0",
    "craco-babel-loader": "^1.0.3",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mo-dev": "^0.13.0",
    "prettier": "^2.7.1",
    "react-scripts": "4.0.3",
    "wasm-loader": "^1.3.0"
  },
  "scripts": {
    "start": "concurrently -p '|' npm:frontend npm:service",
    "frontend": "craco start",
    "service": "mo-dev --deploy",
    "build": "craco build",
    "test": "craco test -- --config=config/jest.config.js",
    "eject": "craco eject",
    "deploy": "dfx deploy",
    "clean": "dfx stop && dfx start --clean --background",
    "prestart": "dfx start --background; [ -f .dfx/local/canister_ids.json ] || dfx deploy",
    "predeploy": "npm run prestart",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "globals": {
      "Motoko": true
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx,json,css,scss,htm,html,md,mdx}": [
      "prettier --write"
    ]
  }
}
