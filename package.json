  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "globals": {
      "Motoko": true
    }
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ],
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx,json,css,scss,htm,html,md,mdx}": [
      "prettier --write"
    ]
  }
